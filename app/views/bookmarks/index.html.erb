<h4 style="line-height:2.6rem"><span style="font-size:1.1em">Welcome back <strong><%= current_user.name %></strong>,</span><br> here are your recent bookmarks&hellip;</h4>

<div class="row">
  <% @bookmarks.each do |bookmark| %>
    <div class="col s12 m4">
      <div class="card small hoverable">
        <div class="card-image">
          <%= image_tag bookmark.image_url %>
          <span class="card-title truncate"></span>
        </div>
        <div class="card-content">
          <p><%= bookmark.description %></p>
        </div>
        <div class="card-action truncate">
          <%= link_to "See Bookmark", bookmark_path(bookmark) %>
        </div>
      </div>
    </div>
    <% end %>
</div>

<div class="row">
  <h5>Popular bookmarks:</h5>
  <% @popular_bookmarks.each do |bookmark| %>
    <div class="col s12 m4">
      <div class="card-panel indigo lighten-2 center-align hoverable">
        <%= link_to bookmark[0], bookmark[0], :target => "_blank", class: "card-content black-text truncate" %>
      </div>
    </div>
  <% end %>
</div>

<div class="row">
  <h5>Popular tags:</h5>
  <% @popular_tags.each do |tag| %>
    <div class="col s12 m4">
      <div class="card-panel indigo lighten-1 center-align hoverable">
        <%= tag %>
      </div>
    </div>
  <% end %>
</div>
